<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zykj.com.barguotakeout.activity.ZhaoShangJiaMengActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_color"
        android:clickable="true"
        android:padding="2dp">

        <ImageView
            android:id="@+id/im_zsjm_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back_selector"
            android:padding="10dp"
            android:src="@mipmap/ic_actionbar_back" />

        <TextView
            style="@style/TitleTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="招商加盟"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#f5f5f5">
            <TextView
                android:id="@+id/tv_zhaoshanginfo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="一、巴国外卖官方网站"
                android:textColor="#E53921"
                android:background="#fff"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tv_tijiaozhaoshang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="官方网站:www.baguowaimai.com"
                android:background="#fff"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="2dp"/>
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="二、巴国外卖官方网站"
                android:background="#fff"
                android:textColor="#E53921"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="官方网站:www.baguowaimai.com"
                android:background="#fff"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="2dp"/>-->
            <EditText
                android:id="@+id/et_zsjm_xiangfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:lines="4"
                android:gravity="top"
                android:padding="10dip"
                android:hint="写下你的想法，加入我们吧。"/>
            <Button
                android:id="@+id/bt_zsjm_tijiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="立即提交"
                android:background="#A0A0A0"
                android:textColor="#fff"
                android:padding="8dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
